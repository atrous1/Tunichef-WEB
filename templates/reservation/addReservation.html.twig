{% extends 'base.html.twig' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center">Make a Reservation</h1>
            <div class="reservation-form">
                {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                
                <div class="form-group">
                    {{ form_label(form.nom_reservation, 'Reservation Name') }}
                    {{ form_widget(form.nom_reservation, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.num_table, 'Table Number') }}
                    {{ form_widget(form.num_table, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.num_tel, 'Phone Number') }}
                    {{ form_widget(form.num_tel, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.calendrier, 'Date') }}
                    {{ form_widget(form.calendrier, {'attr': {'class': 'form-control'}}) }}
                </div>
                <br>
                
                <div class="text-center">
                    {{ form_widget(form.Reserver, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
