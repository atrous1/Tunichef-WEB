{% extends 'base.html.twig' %}

{% block content %}

    <style>
        .table-container {
            display: inline-block;
            vertical-align: top;
            border: 1px solid #000;
            margin-right: 10px; /* Adjust spacing between tables */
            margin-bottom: 20px;
        }
        .table-container table {
            border-collapse: collapse;
            width: 200px; /* Adjust table width as needed */
        }
        .table-container td {
            border: 1px solid #000;
            padding: 10px;
        }
        .table-container td:last-child {
            border-right: none;
        }
        .table-container tbody tr:last-child td {
            border-bottom: none;
        }
    </style>

    <h1>Available Tables</h1>
    <div>
        {% for produit in produits %}
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th style="text-align: center;">Product Name : {{ produit.getNomProduit() }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="text-align: center;">
                                <img src="{{ asset('images/download.jpeg') }}" width="150">
                                <br>
                                <br>
                                <a href="{{ path('PanierAdd', {'id': produit.id}) }}" class="btn btn-primary">Add</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            {% if loop.index % 6 == 0 %}
                <br style="clear: both;">
            {% endif %}
        {% endfor %}
    </div>

{% endblock %}
