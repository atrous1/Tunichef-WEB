{% extends 'base.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block content %}
    <h1>Réclamation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reclamation.description }}</td>
            </tr>
            <tr>
                <th>Avis</th>
                <td>{{ reclamation.avis }}</td>
            </tr>
            <tr>
                <th>Date de la réclamation</th>
                <td>{{ reclamation.daterec ? reclamation.daterec|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IdRep</th>
                <td>
                    {% for idRep in reclamation.idRep %}
                        {{ idRep.id }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_index') }}">Revenir à la liste</a>

    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">Modifier</a>

    {{ include('reclamation/_delete_form.html.twig') }}


    {% include 'footer.html.twig' %}
{% endblock %}
