{% extends 'base.html.twig' %}

{% block title %}Oriental Products
{% endblock %}

{% block content %}
	<div class="container">
		<h1 class="my-4">Oriental Products</h1>
		<div class="row">
			<div class="col-md-6">
				<ul class="list-group">
					{% for product in products %}
						<li class="list-group-item">
							<div class="d-flex justify-content-between align-items-center">
								<div>
									<p><img src="{{ asset('uploads/' ~ product.imageProduit) }}" width="50" height="50"></p>
									<h5 class="mb-0">{{ product.nomProduit }}</h5>
									<p class="text-muted mb-1">{{ product.descriptionProduit }}</p>
									<p><img src="{{ product.qrCode }}" width="123" height="100"/></p>

									<span class="text-muted mb-1">Price:
										{{ product.prixProduit }}
										TND</span>

								</div>

							</div>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
{% endblock %}
