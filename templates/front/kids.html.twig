{% extends 'base.html.twig' %}

{% block title %}Kids Products
{% endblock %}

{% block content %}
	<div class="container">
		<h1 class="my-4">Kids Products</h1>
		<div class="row">
			<div class="col-md-6">
				<ul class="list-group">
					{% for product in products %}
						<div class="col mb-4">
							<div class="card">
								<img src="{{ asset('uploads/' ~ product.imageProduit) }}" width="150" height="150">
								<div class="card-body">
									<h5 class="card-title">{{ product.nomProduit }}</h5>
									<p class="card-text">{{ product.descriptionProduit }}</p>
									<p><img src="{{ product.qrCode }}" width="123" height="100"/></p>
									<p class="card-text">
										<small class="text-muted">Price:
											{{ product.prixProduit }}
											TND</small>
									</p>
								</div>
							</div>
						</div>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
{% endblock %}
