{% block body %}

    <!-- Breadcrumb Section Start -->
    <section class="breadcrumb-section pt-0">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-contain">
                        <h2>Forgot Password</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br>
    <br>
    <br>
    <!-- Breadcrumb Section End -->

    <!-- Forgot Password Section Start -->
    <section class="forgot-password-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="image-container">
                        <img src="{{ asset('assets/img/forgot.png') }}" class="img-fluid" alt="Forgot Password">
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="forgot-password-form">
                        <h3 class="mb-4">Reset Your Password</h3>

                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        {{ form_start(requestForm) }}
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            {{ form_widget(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email address'}}) }}
                            <small class="form-text text-muted">We'll send you a link to reset your password.</small>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Send password reset email</button>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Forgot Password Section End -->

{% endblock %}
