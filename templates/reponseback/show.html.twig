{% extends 'back.html.twig' %}

{% block title %}Reponse{% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="text-center">Réponses</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id de la réponse</th>
                            <td>{{ reponse.id }}</td>
                        </tr>
                        <tr>
                            <th>Contenu</th>
                            <td>{{ reponse.contenu }}</td>
                        </tr>
                        <tr>
                            <th>Date de la réponse</th>
                            <td>{{ reponse.dateRep ? reponse.dateRep|date('Y-m-d') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center">
                    <a href="{{ path('app_reponse_indexback') }}" class="btn btn-secondary">Revenir à la liste</a>
                    <a href="{{ path('app_reponse_editback', {'id': reponse.id}) }}" class="btn btn-primary">Modifier</a>
                </div>

                {{ include('reponseback/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
